<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_word"
    tools:context="com.example.qman.rockpad.MainActivity">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="95dp"
        android:layout_height="213dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/products"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格："
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/product_image"
        android:layout_marginLeft="@dimen/main_kuang_leftMargin"
        android:layout_marginTop="@dimen/main_jianju"/>
    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00元"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/price"
        android:layout_alignBottom="@+id/price"  />
    <TextView
        android:id="@+id/salesDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日销量："
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/price"
        android:layout_below="@+id/price"
        android:layout_marginTop="@dimen/main_word_jianju"/>
    <TextView
        android:id="@+id/product_salesDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100瓶"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/salesDaily"
        android:layout_alignBottom="@+id/salesDaily"  />

    <TextView
        android:id="@+id/salesMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月销量："
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/salesDaily"
        android:layout_below="@+id/salesDaily"
        android:layout_marginTop="@dimen/main_word_jianju"/>
    <TextView
        android:id="@+id/product_salesMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000瓶"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/salesMonth"
        android:layout_alignBottom="@+id/salesMonth"  />

    <TextView
        android:id="@+id/compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同类对比："
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/salesMonth"
        android:layout_alignLeft="@+id/button1"
        android:layout_marginTop="@dimen/main_jianju"/>
    <!--中间的按钮：碳酸饮料-->
    <RelativeLayout
        android:id="@+id/button2"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_jianju"
        android:layout_centerInParent="true"
        android:layout_below="@+id/compare">
        <ImageView
            android:id="@+id/kuang2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/kuang"/>
        <TextView
            android:id="@+id/word2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="碳酸饮料"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="22dp"/>
    </RelativeLayout>

    <!--左侧的按钮：纯净水按钮-->
    <RelativeLayout
        android:id="@+id/button1"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_jianju"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_below="@+id/compare">
        <ImageView
            android:id="@+id/kuang1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/kuang"/>
        <TextView
            android:id="@+id/word1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纯 净 水"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="22dp"/>
    </RelativeLayout>

    <!--右侧的按钮：茶类-->
    <RelativeLayout
        android:id="@+id/button3"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_jianju"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/button2"
        android:layout_below="@+id/compare">
        <ImageView
            android:id="@+id/kuang3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/kuang"/>
        <TextView
            android:id="@+id/word3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="茶    类"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="22dp"/>
    </RelativeLayout>

</RelativeLayout>
